@model GameCatalogue.Models.Game

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4 class="display-4 text-center mx-3">@Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <div class="row mb-3">
        <div class="col-sm-4">
            @if ( @Model.ImageUrl == "")
            {
                <image src="/images/missing.png" alt="Missing Image" class="w-100" />
            }
            else
            {
                <image src="/images/@Model.ImageUrl" alt="Missing Image" class="mx-auto d-block" style="max-height: 300px; object-fit: cover;" />
            }
          
        </div>
        <div class="col-sm-8">
            <dl class="row">

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Requirements)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Requirements)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Genre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Genre)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
            </dl>
            <div class="mt-3">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="text-decoration-none" asp-action="Edit" asp-route-id="@Model.Id">
                        <div type="button" class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</div>
                    </a>
                }
                <a class="text-decoration-none" asp-action="Index" asp-route-id="">
                    <div type="button" class="btn btn-secondary" asp-action="Index" asp-route-id="">Back</div>
                </a>
            </div>
        </div>
    </div>
    <div>
        <h3>
            @Html.DisplayNameFor(model => model.Description)
        </h3>
        <p>
            @Html.DisplayFor(model => model.Description)
        </p>
    </div>
</div>

